<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://6f837dbc.ngrok.com/plugins/bootstrap/bootstrap.css" rel="stylesheet">
  <link href="http://6f837dbc.ngrok.com/css/style.css" rel="stylesheet">
  <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Righteous' rel='stylesheet' type='text/css'>
  <link href="http://6f837dbc.ngrok.com/plugins/select2/select2.css" rel="stylesheet">
</head>
<body>

<div id="main" class="container-fluid">
	<div class="row"> 
    <%= render :partial => 'shared/sidebar' %>

		<div id="content" class="col-xs-12 col-sm-10">
			<div>
        <%= yield %>
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script type="text/javascript">
// Add listener for redraw menu when windows resized
window.onresize = MessagesMenuWidth;
$(document).ready(function() {
	// Add class for correctly view of messages page
	$('content').addClass('full-content');
	// Run script for change menu width
	MessagesMenuWidth();
	$('content').on('click','[id^=msg-]', function(e){
		e.preventDefault();
		$('[id^=msg-]').removeClass('active');
		$(this).addClass('active');
		$('.one-list-message').slideUp('fast');
		$('.'+$(this).attr('id')+'-item').slideDown('fast');
	});
	$('html').animate({scrollTop: 0},'slow');
});
</script>
      </div>
    </div>
  </div>
</div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert alert-info alert-dismissible", :role => "alert" do %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= content_tag :strong, msg %>
        <% end %>
    <% end %>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<!--<script src="http://code.jquery.com/jquery.js"></script>-->
<script src="http://6f837dbc.ngrok.com/plugins/jquery/jquery-2.1.0.min.js"></script>
<script src="http://6f837dbc.ngrok.com/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="http://6f837dbc.ngrok.com/plugins/bootstrap/bootstrap.min.js"></script>
<script src="http://6f837dbc.ngrok.com/plugins/justified-gallery/jquery.justifiedgallery.min.js"></script>
<script src="http://6f837dbc.ngrok.com/plugins/tinymce/tinymce.min.js"></script>
<script src="http://6f837dbc.ngrok.com/plugins/tinymce/jquery.tinymce.min.js"></script>
<!-- All functions for this theme + document.ready processing -->
<script src="http://6f837dbc.ngrok.com/js/devoops.js"></script>

</body>
</html>